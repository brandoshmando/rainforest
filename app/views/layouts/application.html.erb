<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="navbar">
      <% if current_user %>
        <p>Signed in as <%= current_user.email %> | <%= link_to "Logout", session_path('current'), method: :delete %> </p>
      <% else %>
        <%= link_to "Sign in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
