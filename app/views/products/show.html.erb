<h1><%= @product.name %></h1>
<% if current_user && @product.user_id == current_user.id %>
  <p><%= link_to "//Home", root_path %> | <%= link_to "//Edit", edit_product_path %></p>
<% else %>
  <p><%= link_to "//Home", root_path %>
<% end %>

<hr>
<p><strong>Description:</strong></p>
<p>
  <%= @product.description %>
</p>
<p><strong>Price:</strong></p>
<p>
  <%= @product.price_in_cents %>
</p>
<hr>
<h2>Reviews for <%= @product.name %></h2>
<hr>
<% if current_user %>
  <%= form_for [@product, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="error_explanatoin">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved!</h2>
        <div class="error_messages">
          <ul>
            <% @reviews.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Title" %>
    </div>

    <div>
      <%= f.label :comment %>
      <%= f.text_area :comment, placeholder: "Type your comment here..." %>
    </div>

  <% end %>
  <% if @reviews.empty? %>
    <p><i>There are currently no reviews for this product</i></p>
  <% else %>
    <% @product.reviews.each do |review| %>
      <h3><%= link_to "#{review.title}", product_review_path(review) %></h3>
      <p><%= review.comment %></p>
      <p><%= review.user.email %></p>
      <hr>
    <% end %>
  <% end %>
<% else %>
  <p>Please  <%= link_to "Sign in", new_session_path %> or <%= link_to "Sign up", new_user_path %> to see these reviews!</p>
<% end %>


