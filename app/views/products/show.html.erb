<h1><%= @product.name %></h1>
<% if current_user && @product.user_id == current_user.id %>
  <p><%= link_to "//Home", root_path %> | <%= link_to "//Edit", edit_product_path %></p>
<% else %>
  <p><%= link_to "//Home", root_path %>
<% end %>
<hr>
<p><strong>Description:</strong></p>
<p>
  <%= @product.description %>
</p>
<p><strong>Price:</strong></p>
<p>
  <%= @product.price_in_cents %>
</p>
<hr>
<h2>Reviews for <%= @product.name %></h2>
<% if current_user %>
 <%= render 'comment_form' %>
  <% if @reviews.empty? %>
    <p><i>There are currently no reviews for this product</i></p>
  <% else %>
  <%= render 'reviews' %>
  <% end %>
<% else %>
  <p>Please  <%= link_to "Sign in", new_session_path %> or <%= link_to "Sign up", new_user_path %> to see these reviews!</p>
<% end %>


